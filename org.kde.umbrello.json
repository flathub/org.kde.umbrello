{
    "app-id": "org.kde.umbrello",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebkit.BaseApp",
    "base-version": "5.15-21.08",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.llvm12"
    ],
    "add-extensions": {
        "org.freedesktop.Sdk.Extension.llvm12": {
            "no-autodownload": "false",
            "version": "21.08"
        }
    },
    "command": "umbrello5",
    "rename-icon": "umbrello",
    "finish-args": [
        "--share=ipc",
        "--device=dri",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--own-name=org.kde.umbrello-2"
    ],
    "modules": [
        {
            "name": "kdelibs4support",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.98/portingAids/kdelibs4support-5.98.0.tar.xz",
                    "sha256": "0ead944e9ada2adf8fde2724762dcb6ee265e6aa368b94b3147ce6c062cfde43",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8762,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/frameworks/$major.$minor/portingAids/kdelibs4support-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kdevelop-pg-qt",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kdevelop-pg-qt/2.2.1/src/kdevelop-pg-qt-2.2.1.tar.xz",
                    "sha256": "c13931788ac9dc02188cdd9c6e71e164ae81b4568b048748652bbf6fa4a9c62b"
                }
            ]
        },
        {
            "name": "umbrello",
            "buildsystem": "cmake-ninja",
            "build-options": {
                "prepend-path": "/usr/lib/sdk/llvm12/bin",
                "prepend-ld-library-path": "/usr/lib/sdk/llvm12/lib"
            },
            "config-opts": [
                "-DBUILD_APIDOC=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/22.08.1/src/umbrello-22.08.1.tar.xz",
                    "sha256": "dd25bf014628835a6808dbbf069ece2d0cad9157c0caaad352eb40f3883df461",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/umbrello-$version.tar.xz"
                    }
                },
                {
                    "type": "patch",
                    "path": "appdata.patch"
                }
            ]
        }
    ]
}
