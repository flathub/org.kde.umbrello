    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebkit.BaseApp",
    "base-version": "5.15-21.08",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.llvm12"
    ],
    "add-extensions": {
        "org.freedesktop.Sdk.Extension.llvm12": {
            "no-autodownload": "false",
            "version": "21.08"
        }
    },
    "command": "umbrello5",
    "rename-icon": "umbrello",
    "finish-args": [
        "--share=ipc",
        "--device=dri",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--own-name=org.kde.umbrello-2"
    ],
    "modules": [
        {
            "name": "kdelibs4support",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.102/portingAids/kdelibs4support-5.102.0.tar.xz",
                    "sha256": "643ef6b24b4fc6c06882f2a00ac7bc6a5c7f11811be152b012879ec7591d0269",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8762,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/frameworks/$major.$minor/portingAids/kdelibs4support-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kdevelop-pg-qt",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kdevelop-pg-qt/2.2.2/src/kdevelop-pg-qt-2.2.2.tar.xz",
                    "sha256": "3d56604c479f8f04ae32a523ee91f3078c717117d0deb39e973e22494cbb65f1",
                    "x-checker-data": {
                        "type": "anitya",
