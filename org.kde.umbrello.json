{
    "app-id": "org.kde.umbrello",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-24.08",
    "sdk": "org.kde.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.llvm18"
    ],
    "add-extensions": {
        "org.freedesktop.Sdk.Extension.llvm18": {
            "no-autodownload": false,
            "version": "24.08"
        }
    },
    "command": "umbrello5",
    "rename-icon": "umbrello",
    "finish-args": [
        "--device=dri",
        "--own-name=org.kde.umbrello-2",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake"
    ],
    "modules": [
        {
            "name": "kdelibs4support",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.116/portingAids/kdelibs4support-5.116.0.tar.xz",
                    "sha256": "ed915dd146eb10262816da62904d04f78dacf9595d44d400dd1644d21c10c1e4",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 379839,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/frameworks/$major.$minor/portingAids/kdelibs4support-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kdevelop-pg-qt",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_WITH_QT6=OFF",
                "-DBUILD_WITH_QT5=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kdevelop-pg-qt/2.2.2/src/kdevelop-pg-qt-2.2.2.tar.xz",
                    "sha256": "3d56604c479f8f04ae32a523ee91f3078c717117d0deb39e973e22494cbb65f1",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 17733,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kdevelop-pg-qt/$version/src/kdevelop-pg-qt-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "umbrello",
            "buildsystem": "cmake-ninja",
            "build-options": {
                "prepend-path": "/usr/lib/sdk/llvm16/bin",
                "prepend-ld-library-path": "/usr/lib/sdk/llvm16/lib"
            },
            "config-opts": [
                "-DBUILD_APIDOC=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.12.1/src/umbrello-25.12.1.tar.xz",
                    "sha256": "13146ca7d51029196b5ff706a37183815ec9eef5b07938dd127c498824fb2408",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/umbrello-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
